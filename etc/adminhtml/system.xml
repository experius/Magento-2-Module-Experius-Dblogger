<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="system">
            <resource>Experius_Dblogger::config_experius_dblogger</resource>
            <group id="dblogger" showInDefault="1" showInStore="0" showInWebsite="0" sortOrder="100" translate="label">
                <label>Database Logger</label>
                <field id="is_enabled" showInDefault="1" showInStore="0" showInWebsite="0" sortOrder="10" translate="label" type="select">
                    <label>Enable database logger</label>
                    <comment>Enables logging to database</comment>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>
                <field id="days" showInDefault="1" showInStore="0" showInWebsite="0" sortOrder="20" translate="label" type="text">
                    <label>Save logs for X days</label>
                    <comment>Number of days logs will be saved</comment>
                </field>
            </group>
        </section>
    </system>
</config>
